<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/on_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="actionBarTheme">@style/BarSearchView</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="chipBackgroundColor" tools:ignore="PrivateResource" >@color/white</item>
        <item name="chipStrokeColor">@color/text</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Chip.Fire" parent="Chip">
        <item name="chipBackgroundColor" tools:ignore="PrivateResource" >@color/chip_light_red_state</item>
        <item name="android:textColor">@color/chip_red_state</item>
        <item name="chipStrokeColor">@color/chip_red_state</item>
        <item name="chipIconTint">@color/chip_red_state</item>
    </style>

    <style name="Chip.Planta" parent="Chip">
        <item name="chipBackgroundColor" tools:ignore="PrivateResource" >@color/chip_light_planta_state</item>
        <item name="android:textColor">@color/chip_planta_state</item>
        <item name="chipStrokeColor">@color/chip_planta_state</item>
        <item name="chipIconTint">@color/chip_planta_state</item>
    </style>

    <style name="Chip.Veneno" parent="Chip">
        <item name="chipBackgroundColor" tools:ignore="PrivateResource" >@color/chip_light_veneno_state</item>
        <item name="android:textColor">@color/chip_veneno_state</item>
        <item name="chipStrokeColor">@color/chip_veneno_state</item>
        <item name="chipIconTint">@color/chip_veneno_state</item>
    </style>

    <style name="Chip.Volador" parent="Chip">
        <item name="chipBackgroundColor" tools:ignore="PrivateResource" >@color/chip_light_volador_state</item>
        <item name="android:textColor">@color/chip_volador_state</item>
        <item name="chipStrokeColor">@color/chip_volador_state</item>
        <item name="chipIconTint">@color/chip_volador_state</item>
    </style>

    <style name="Chip.Detail" parent="Base.Widget.MaterialComponents.TextView.Types">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="TextviewAtributos" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="TextviewAtributos.Estadisticas" parent="TextviewAtributos">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">8.5sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/pokemon_name</item>
        <item name="android:layout_marginEnd">34dp</item>
    </style>

    <style name="TextviewAtributosValores" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/pokemon_name</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextviewAtributosValores.Estadisticas" parent="TextviewAtributosValores">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>

    <style name="DialogTheme" parent="ZeroDialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/dialog_background</item>
        <item name="android:statusBarColor">@color/on_primary_light</item>
        <item name="colorPrimary">@color/fire</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/fire</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="trackColor">@color/track_color</item>
        <item name="indicatorColor">@color/indicator_color</item>
    </style>
    
    <style name="Base.Widget.MaterialComponents.TextView.Types" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">4.4dp</item>
        <item name="android:layout_marginEnd">3.7dp</item>
    </style>

    <style name="BarSearchView" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorHint">#c1d4da</item>
        <item name="android:textColor">#c1d4da</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="SplashImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/combined_shape_copy_30</item>
    </style>

    <style name="ButtonFav" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:backgroundTint">@color/fire</item>

    </style>

</resources>